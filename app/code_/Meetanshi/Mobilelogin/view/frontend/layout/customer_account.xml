<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current"
                   name="customer-account-navigation-downloadable-products-link-custom"
                   ifconfig="mobilelogin/general/enabled">
                <arguments>
                    <argument name="path" xsi:type="string">mobilelogin/otp/update</argument>
                    <argument name="label" xsi:type="string">Mobile Number</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>