<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">delhivery_lastmile_location_form.location_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Manage Location Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Delhivery\Lastmile\Block\Adminhtml\Location\Edit\Buttons\Back"/>
            <button name="delete" class="Delhivery\Lastmile\Block\Adminhtml\Location\Edit\Buttons\Delete"/>
            <button name="reset" class="Delhivery\Lastmile\Block\Adminhtml\Location\Edit\Buttons\Reset"/>
            <button name="save" class="Delhivery\Lastmile\Block\Adminhtml\Location\Edit\Buttons\Save"/>
            <button name="save_and_continue" class="Delhivery\Lastmile\Block\Adminhtml\Location\Edit\Buttons\SaveAndContinue"/>
        </buttons>
        <namespace>delhivery_lastmile_location_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>delhivery_lastmile_location_form.location_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="location_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="delhivery_lastmile/location/save"/>
        </settings>
        <dataProvider class="Delhivery\Lastmile\Model\Location\DataProvider" name="location_form_data_source">
            <settings>
                <requestFieldName>location_id</requestFieldName>
                <primaryFieldName>location_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">Manage Location Information</label>
        </settings>
        <field name="location_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>location_id</dataScope>
            </settings>
        </field>
        <field name="name" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="address" formElement="textarea" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Address</label>
                <dataScope>address</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="contact_person" formElement="input" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Contact Person</label>
                <dataScope>contact_person</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="email" formElement="input" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Email</label>
                <dataScope>email</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="phone" formElement="input" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Phone</label>
                <dataScope>phone</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="pin" formElement="input" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Pin</label>
                <dataScope>pin</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="city" formElement="input" sortOrder="70">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">City</label>
                <dataScope>city</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="state" formElement="input" sortOrder="80">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">State</label>
                <dataScope>state</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="incoming_center" formElement="input" sortOrder="90">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Incoming Center</label>
                <dataScope>incoming_center</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="rto_center" formElement="input" sortOrder="100">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Rto Center</label>
                <dataScope>rto_center</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="dto_center" formElement="input" sortOrder="110">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Dto Center</label>
                <dataScope>dto_center</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="status" formElement="select" sortOrder="120">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Delhivery\Lastmile\Model\Location\Source\Status"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="expected_package_count" formElement="input" sortOrder="130">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">location</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Expected Package Count</label>
                <dataScope>expected_package_count</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
