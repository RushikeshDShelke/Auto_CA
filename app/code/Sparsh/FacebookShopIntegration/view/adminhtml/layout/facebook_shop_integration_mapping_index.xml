<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <body>
        <referenceContainer name="content">
            <block class="Sparsh\FacebookShopIntegration\Block\Adminhtml\Mapping" name="facebook_shop_integration_mapping_grid">
                <block class="Magento\Backend\Block\Widget\Grid" name="facebook_shop_integration_mapping_grid.grid" as="grid">
                    <arguments>
                        <argument name="id" xsi:type="string">entity_id</argument>
                        <argument name="dataSource" xsi:type="object">Sparsh\FacebookShopIntegration\Model\ResourceModel\FacebookShopAttributeMapping\Collection</argument>
                        <argument name="default_sort" xsi:type="string">entity_id</argument>
                        <argument name="default_dir" xsi:type="string">ASC</argument>
                        <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\Massaction" name="sparsh.facebook_shop_integration.grid.massaction" as="grid.massaction">
	                    <arguments>
	                        <argument name="massaction_id_field" xsi:type="string">entity_id</argument>
	                        <argument name="form_field_name" xsi:type="string">entity_id</argument>
	                        <argument name="use_select_all" xsi:type="string">1</argument>
	                        <argument name="options" xsi:type="array">
                                <item name="delete" xsi:type="array">
	                                <item name="label" xsi:type="string" translate="true">Delete</item>
	                                <item name="url" xsi:type="string">*/*/delete</item>
                                    <item name="confirm" xsi:type="string" translate="true">Are you sure you wan't to delete selected items?</item>
	                            </item>
	                        </argument>
	                    </arguments>
	                </block>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" name="facebook_shop_integration_mapping_grid.grid.columnSet" as="grid.columnSet">
                        <arguments>
                            <argument name="rowUrl" xsi:type="array">
                                <item name="path" xsi:type="string">*/*/edit</item>
                                <item name="extraParamsTemplate" xsi:type="array">
                                    <item name="entity_id" xsi:type="string">getEntityId</item>
                                </item>
                            </argument>
                        </arguments>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="facebook_attribute">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Facebook Attribute</argument>
                                <argument name="index" xsi:type="string">facebook_attribute</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="magento_attribute">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Magento Attribute</argument>
                                <argument name="index" xsi:type="string">magento_attribute</argument>
                                <argument name="type" xsi:type="string">text</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
