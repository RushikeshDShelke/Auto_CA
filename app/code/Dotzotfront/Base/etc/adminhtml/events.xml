<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <event name="controller_action_predispatch">
        <observer name="dotzotfront_base_controller_action_predispatch" instance="Dotzotfront\Base\Observer\PredispathAdminActionControllerObserver" />
    </event>

    <event name="controller_action_postdispatch">
        <observer name="dotzotfront_base_controller_action_postdispatch" instance="Dotzotfront\Base\Observer\Reindex" />
    </event>

    <event name="controller_action_predispatch_adminhtml_system_config_edit">
        <observer name="dotzotfront_base_predispatch_adminhtml_system_config_edit" instance="Dotzotfront\Base\Observer\SystemConfigEditBefore" />
    </event>

    <event name="controller_action_postdispatch_adminhtml_system_config_save">
        <observer name="dotzotfront_base_postdispatch_adminhtml_system_config_save" instance="Dotzotfront\Base\Observer\SystemConfigSaveAfter" />
    </event>

</config>
