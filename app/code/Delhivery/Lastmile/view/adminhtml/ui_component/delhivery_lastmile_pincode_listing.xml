<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">delhivery_lastmile_pincode_listing.delhivery_lastmile_pincode_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Download Pincode</label>
            </button>
        </buttons>
        <spinner>delhivery_lastmile_pincode_columns</spinner>
        <deps>
            <dep>delhivery_lastmile_pincode_listing.delhivery_lastmile_pincode_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="delhivery_lastmile_pincode_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">pincode_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="delhivery_lastmile_pincode_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>pincode_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <!--<exportButton/>-->
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="observers" xsi:type="array">
                    <item name="column" xsi:type="string">column</item>
                </item>
            </argument>
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>
        <!--<massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you wan't to delete selected Manage Pincodes?</message>
                        <title translate="true">Delete Manage Pincodes</title>
                    </confirm>
                    <url path="delhivery_lastmile/pincode/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="edit">
                <settings>
                    <callback>
                        <target>editSelected</target>
                        <provider>delhivery_lastmile_pincode_listing.delhivery_lastmile_pincode_listing.delhivery_lastmile_pincode_columns_editor</provider>
                    </callback>
                    <type>edit</type>
                    <label translate="true">Edit</label>
                </settings>
            </action>
        </massaction>-->
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="delhivery_lastmile_pincode_columns">
        <settings>
            <editorConfig>
                <param name="clientConfig" xsi:type="array">
                    <item name="saveUrl" xsi:type="url" path="delhivery_lastmile/pincode/inlineEdit"/>
                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                </param>
                <param name="indexField" xsi:type="string">pincode_id</param>
                <param name="enabled" xsi:type="boolean">false</param>
                <param name="selectProvider" xsi:type="string">delhivery_lastmile_pincode_listing.delhivery_lastmile_pincode_listing.delhivery_lastmile_pincode_columns.ids</param>
            </editorConfig>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">delhivery_lastmile_pincode_listing.delhivery_lastmile_pincode_listing.delhivery_lastmile_pincode_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <!--<selectionsColumn name="ids">
            <settings>
                <indexField>pincode_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>55</resizeDefaultWidth>
            </settings>
        </selectionsColumn>-->
        <column name="pincode_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="district">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">District</label>
            </settings>
        </column>
        <column name="pin">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <dataType>text</dataType>
                <label translate="true">Pincode</label>
            </settings>
        </column>
        <column name="pre_paid" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <label translate="true">Pre Paid</label>
            </settings>
        </column>
        <column name="cash" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <label translate="true">Cash</label>
            </settings>
        </column>
        <column name="pickup" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <label translate="true">Pickup</label>
            </settings>
        </column>
        <column name="cod" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <filter>select</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>select</editorType>
                </editor>
                <dataType>select</dataType>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <label translate="true">COD</label>
            </settings>
        </column>
        <column name="state_code">
            <settings>
                <filter>text</filter>
                <editor>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <editorType>text</editorType>
                </editor>
                <dataType>text</dataType>
                <label translate="true">State Code</label>
            </settings>
        </column>
    </columns>
</listing>
