<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Forgot Your Password</title>
        <script src="Meetanshi_Mobilelogin::js/mobilelogin.js"/>
        <css src="Meetanshi_Mobilelogin::css/mobilelogin.css"/>
    </head>
    <body>
        <referenceBlock name="forgotPassword">
            <action method="setTemplate" ifconfig="mobilelogin/otpsend/forgotenabled">
                <argument name="template" xsi:type="string">Meetanshi_Mobilelogin::form/forgotpassword.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
