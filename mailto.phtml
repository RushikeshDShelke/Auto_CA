<script type="text/javascript">
 require(['jquery'], function () {
jQuery('.paccordion').click(function(e) {
    e.preventDefault();
  
    var $this = jQuery(this);
    
    if (jQuery(this).hasClass('active')) {
        jQuery(".paccordion").each(function() {
           jQuery(this).removeClass('active');
           jQuery(this).addClass('nactive');
        });
    }else{
        jQuery(".paccordion").each(function() {
           jQuery(this).removeClass('active');
           jQuery(this).addClass('nactive');
        });
        $this.removeClass('nactive');
        $this.addClass('active');
    }
  
    if ($this.next().hasClass('show')) {
        $this.next().removeClass('show');
        $this.next().slideUp(350);
    } else {
        $this.parent().parent().find('.block-title .panel').removeClass('show');
        $this.parent().parent().find('.block-title .panel').slideUp(350);
        $this.next().toggleClass('show');
        $this.next().slideToggle(350);
    }
});
 });
function popWin(url,win,para) {
    var win = window.open(url,win,para);
    win.focus();
}
</script>



