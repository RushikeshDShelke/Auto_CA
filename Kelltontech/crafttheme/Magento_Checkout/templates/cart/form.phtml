<?php $objectManager = \Magento\Framework\App\ObjectManager::getInstance();
$cart = $objectManager->get('\Magento\Checkout\Model\Cart');
// retrieve quote items array
$items = $cart->getQuote()->getAllItems();
$productItemsArray = array();
foreach($items as $item) {
        $product = $objectManager->get('Magento\Catalog\Model\Product')->load($item->getProductId());
	if ($taxAttribute = $product->getCustomAttribute('tax_class_id')) {
    		$productRateId = $taxAttribute->getValue();
    		$rate = $objectManager->create('\Magento\Tax\Api\TaxCalculationInterface')->getCalculatedRate($productRateId);
    		$priceIncludingTax = $product->getPrice() + ($product->getPrice() * ($rate / 100));
    		$productPrice = round($priceIncludingTax);
	}
        $ids = $product->getCategoryIds();
        $category = $objectManager->create('Magento\Catalog\Model\Category')->load($ids[0]);
        $productItemsArray[] = array("id"=>$item->getSku(),"name"=>$item->getName(),"price"=>$productPrice,"category"=>$category->getName(),"quantity"=>$item->getQty());
}
$productData = json_encode($productItemsArray);
$total  = $cart->getQuote()->getGrandTotal();
?>
<script type="text/javascript">
var total = "<?php echo $total ?>";
var total_integer = parseInt(total);
var product_data = <?php echo $productData ?>;
var dataLayer = window.dataLayer || [];
dataLayer.push({
  "event": "addToCart",
  "ecommerce": {
    "currencyCode": "INR",
    "revenue": total_integer,
    "add": {
        "products": product_data,
    }
  }
});
</script>
